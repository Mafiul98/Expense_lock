<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:openDrawer="start"
    >

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#ffffff"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            >

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Expense Lock"
                app:titleTextColor="#6A000000"
                app:navigationIcon="@drawable/menu_size"
                android:background="#ffffff"
                app:navigationIconTint="#76000000"
                android:layout_marginStart="8dp"
                />


        </com.google.android.material.appbar.AppBarLayout>

       <!--================================MainContenStart========-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_marginTop="?actionBarSize"
            android:clickable="true"
            >

            <TextView
                android:id="@+id/tvexpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expense"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_below="@id/mainbalance"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/tvshopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shopping: 2000"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_below="@id/tvexpense"
                />

            <TextView
                android:id="@+id/tvfood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food: 2000"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tvshopping"
                android:layout_marginRight="25dp"
                />
            <TextView
                android:id="@+id/tvtravel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="travel: 1500"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tvfood"
                android:layout_marginRight="25dp"
                />
            <TextView
                android:id="@+id/tvbajar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home: 5000"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tvtravel"
                android:layout_marginRight="25dp"
                />
            <TextView
                android:id="@+id/tvpersonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="personal: 2000"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tvbajar"
                android:layout_marginRight="25dp"
                />

            <TextView
                android:id="@+id/tvtotalexpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Expense: 12500"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tvpersonal"
                android:layout_marginRight="25dp"
                />

            <TextView
                android:id="@+id/tvyear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tvtotalexpense"
                android:layout_marginRight="25dp"
                android:layout_marginTop="30dp"
                />

            <ImageView
                android:id="@+id/imageyear"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tvyear"
                android:src="@drawable/year"
                android:layout_marginRight="25dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                />

            <TextView
                android:id="@+id/tvmonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Month"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/imageyear"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                />

            <ImageView
                android:id="@+id/imagemonth"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tvmonth"
                android:src="@drawable/month"
                android:layout_marginRight="25dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                />

            <TextView
                android:id="@+id/tvday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/imagemonth"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                />

            <ImageView
                android:id="@+id/imageday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tvday"
                android:src="@drawable/day"
                android:layout_marginRight="25dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                />

            <TextView
                android:id="@+id/tvincome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Income"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_below="@id/mainbalance"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/tvsalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salary: 17000"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_below="@id/tvincome"
                />
            <TextView
                android:id="@+id/tvbusiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business: 40000"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_below="@id/tvsalary"
                android:layout_marginLeft="25dp"
                />
            <TextView
                android:id="@+id/tvincentive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incentive: 1750"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_below="@id/tvbusiness"
                android:layout_marginLeft="25dp"
                />

            <TextView
                android:id="@+id/tvextra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extra: 1500"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_below="@id/tvincentive"
                android:layout_marginLeft="25dp"
                />

            <TextView
                android:id="@+id/tvdue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due: 1500"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_below="@id/tvextra"
                android:layout_marginLeft="25dp"
                />

            <TextView
                android:id="@+id/totalincome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Income: 60150"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_below="@id/tvdue"
                android:layout_marginLeft="25dp"
                />

            <TextView
                android:id="@+id/tvsavings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Savings"
                android:textSize="18sp"
                android:layout_below="@id/totalincome"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="190dp"
                />

            <ImageView
                android:id="@+id/downimage"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:src="@drawable/down"
                android:layout_below="@id/tvsavings"
                android:layout_marginLeft="211dp"
                />

            <LinearLayout
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/downimage"
                android:layout_marginLeft="190dp"
                >
                <TextView
                    android:id="@+id/tvsavingvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20000"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    />


            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="120dp"
                android:layout_height="40dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="6dp"
                android:layout_marginLeft="25dp"
                android:layout_below="@id/totalincome"
                android:layout_centerVertical="true"
                android:layout_marginTop="35sp"
                >

                <TextView
                    android:id="@+id/tvexpenselist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Expense List"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="120dp"
                android:layout_height="40dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="6dp"
                android:layout_marginLeft="25dp"
                android:layout_below="@id/card1"
                android:layout_centerVertical="true"
                android:layout_marginTop="15sp"
                >

                <TextView
                    android:id="@+id/tvincomelist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Income List"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="120dp"
                android:layout_height="40dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="6dp"
                android:layout_marginLeft="25dp"
                android:layout_below="@id/card2"
                android:layout_centerVertical="true"
                android:layout_marginTop="15sp"
                >

                <TextView
                    android:id="@+id/tvsavingslist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Savings List"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/mainbalance"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:layout_centerHorizontal="true"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Main Balance"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="54dp"
                    android:textColor="#6F000000"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="50000"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:textColor="#94000000"
                    />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="50dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="6dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"
                android:layout_below="@id/card3"
                >

                <TextView
                    android:id="@+id/expense"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Expense+"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="50dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="6dp"
                android:layout_below="@id/card3"
                android:layout_centerInParent="true"
                android:layout_marginTop="40dp"
                >


                <TextView
                    android:id="@+id/income"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Income+"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="50dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="6dp"
                android:layout_below="@id/card3"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25sp"
                android:layout_marginTop="40dp"
                >


                <TextView
                    android:id="@+id/savings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Savings+"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    />
            </androidx.cardview.widget.CardView>



        </RelativeLayout>

    <!--================================MainContenEnd========-->
        
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    
    
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationview"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:backgroundTint="#ffffff"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/navigation_item"
        />



</androidx.drawerlayout.widget.DrawerLayout>